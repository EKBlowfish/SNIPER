# Optional email settings (leave empty to disable Email Report)
ZX_WATCH_EMAIL_TO=you@example.com
ZX_WATCH_EMAIL_FROM=you@example.com
ZX_WATCH_SMTP_HOST=smtp.yourprovider.com
ZX_WATCH_SMTP_PORT=587
ZX_WATCH_SMTP_USER=your_smtp_username
ZX_WATCH_SMTP_PASS=your_smtp_password
ZX_WATCH_SMTP_TLS=1

# SQLite path
ZX_WATCH_DB=zx_marktplaats.sqlite3

# Request pacing and headers
ZX_WATCH_DELAY=1.0
ZX_WATCH_UA=Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/124.0 Safari/537.36

# Default numeric price threshold
ZX_WATCH_MAX_PRICE=300

# Auto fetch interval (minutes)
ZX_WATCH_AUTO_MIN=15

# FX rates to convert to EUR (tune these to current values)
FX_USD_TO_EUR=0.90
FX_GBP_TO_EUR=1.17
FX_AUD_TO_EUR=0.60
FX_CAD_TO_EUR=0.68

# Optional: override search URLs
# MP_SEARCH_URL=https://www.marktplaats.nl/l/computers-en-software/vintage-computers/q/zx+spectrum/
